---
import Profile from "./Profile.astro";
export interface Props {
  company: string;
  date: string;
  name: string;
  pronouns: string;
  routeKey: string;
  src: ImageMetadata;
  title: string;
}

const { name, title, routeKey, pronouns, company, src, date } = Astro.props;
---

<li class="link-card">
  <a href={`/${date}/${routeKey}`}>
    <div class="profile">
      <Profile src={src} name={name} />
    </div>
    <div class="details">
      <h2>{name}</h2>
      <div>
        <p>{pronouns}</p>
        <p><strong>{title}</strong> at {company}</p>
      </div>
    </div>
  </a>
</li>
<style>
  .link-card {
    background-color: white;
    background-image: none;
    background-position: 100%;
    background-size: 400%;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
    border-radius: 0.6rem;
    display: flex;
    list-style: none;
    margin: 0.25rem;
    padding: 0.25rem;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card > a {
    background-color: white;
    border-radius: 0.35rem;
    color: inherit;
    display: flex;
    flex-direction: row;
    line-height: 1.4;
    opacity: 0.8;
    padding: 1rem 1.3rem;
    text-decoration: none;
    width: 100%;
  }

  .details {
    padding: 1rem;
  }
  h2 {
    font-size: 1.25rem;
    margin: 0;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  @media screen and (min-width: 768px) {
    .link-card > a {
      align-items: center;
      flex-direction: column;
      justify-content: center;
      width: 100%;
    }

    .details {
      padding: 1rem;
      text-align: center;
    }
  }
</style>
