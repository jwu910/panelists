---
import StyledGradient from "./StyledGradient";
---

<div class="header">
  <a href="/">
    <StyledGradient text="Home" />
  </a>
</div>

<style>
  .header {
    font-size: 1.5rem;
    margin: 1rem;
    padding: 0.5rem;
    width: 100%;
  }

  .header > a {
    font-weight: 600;
    text-decoration: none;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .header > a:hover {
    text-decoration: underline;
  }
</style>
